<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Nueva Chequera</h3>  
            <br>
        </div>
        <form action="/checks" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="account" class="col-sm-2 control-label">Cuenta:</label>
                <div class="col-sm-10">
                    <select id="account" class="form-control" name="check[account]">
                        <% accounts.forEach(function(account){ %>
                            <option value="<%= account._id %>"><%= account.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="initial" class="col-sm-2 control-label">Número de Cheque Inicial:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="initial" min="0" onchange="document.getElementById('final').min=this.value; document.getElementById('final').value=this.value;" step="1" type="number" name="check[initial]" placeholder="número inicial">
                </div>
                <label for="final" class="col-sm-2 control-label">Cheque Final:</label>
                 <div class="col-sm-4">
                    <input class="form-control" id="final"  min= "0" onchange="if(this.value<document.getElementById('initial').value) this.value = document.getElementById('initial').value; " step="1" type="number" name="check[final]" placeholder="número final">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar">
                    <input type="submit" name="otro" class="btn btn-success" value="Guardar y Añadir Otra"> 
                    <a href="/checks/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>