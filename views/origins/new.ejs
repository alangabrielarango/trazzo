<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Nuevo Saldo Inicial</h3>  
            <br>
        </div>
        <form action="/origins" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">Fecha:</label>
                <div class="col-sm-10">
                    <input class="form-control" id="date" type="date" name="transaction[date]" placeholder="fecha">
                </div>
            </div>
            <div class="form-group">
                <label for="account" class="col-sm-2 control-label">Cuenta:</label>
                <div class="col-sm-10">
                    <select id="account" class="form-control" name="transaction[account]">
                        <% accounts.forEach(function(account){ %>
                            <option value="<%= account._id %>"><%= account.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="total" class="col-sm-2 control-label">Monto:</label>
                <div class="col-sm-10" lang="en-US">
                    <input step="0.01" class="form-control" id="total" type="number" name="transaction[total]" placeholder="monto">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar">
                    <input type="submit" name="otro" class="btn btn-success" value="Guardar y AÃ±adir Otro"> 
                    <a href="/origins/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>