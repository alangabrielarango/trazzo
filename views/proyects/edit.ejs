<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Editar Proyecto</h3>  
            <br>
        </div>
        <form action="/proyects/<%= proyect._id %>?_method=PUT" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="name" type="text" name="proyect[name]" value="<%= proyect.name %>">
                </div>
                <label for="tipo" class="col-sm-2 control-label">Estado:</label>
                <div class="col-sm-4">
                    <select id="status" class="form-control" name="proyect[status]">
                        <% var eje = proyect.status == "En Ejecución" ? "selected" : ""; %>
                        <% var pau = proyect.status == "Pendiente" ? "selected" : ""; %>
                        <% var ter = proyect.status == "Terminado" ? "selected" : ""; %>
                        <option value="En Ejecución" <%= eje %>>En Ejecución</option>
                        <option value="Pendiente" <%= pau %>>Pendiente</option>
                        <option value="Terminado" <%= ter %>>Terminado</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="company" class="col-sm-2 control-label">Empresa:</label>
                <div class="col-sm-4">
                    <select id="company" class="form-control" name="proyect[company]">
                        <% var empresa = "", valor = "" %>
                        <% companies.forEach(function(company){ %>
                            <% valor = proyect.company ? proyect.company.name : "null" %>
                            <% empresa = company.name === valor ? "selected" : ""; %>
                            <% empresa = empresa === "null" ? "selected" : empresa; %>
                            <option value="<%= company._id %>" <%= empresa %>><%= company.name %></option>
                        <% }); %>
                    </select>
                </div>
                <label for="contact" class="col-sm-2 control-label">Cliente:</label>
                <div class="col-sm-4">
                    <select id="contact" class="form-control" name="proyect[contact]">
                        <% var contacto = "", valor = "" %>
                        <% contacts.forEach(function(contact){ %>
                            <% valor = proyect.contact ? proyect.contact.name : "null" %>
                            <% contacto = contact.name === valor ? "selected" : ""; %>
                            <% contacto = contacto === "null" ? "selected" : contacto; %>
                            <option value="<%= contact._id %>" <%= contacto %>><%= contact.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar Cambios">
                    <a href="/proyects/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>