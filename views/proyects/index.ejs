<% include ../partials/header %>

<div class="container-fluid margen100">
    <% include ../partials/toolbar %>
    <div class="row">
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Empresa</th>
                <th>Cliente</th>
                <th></th>
            </tr>
            <% proyects.forEach(function(proyect){ %>
                <tr>
                    <td><%= proyect.name %></td>
                    <td><%= proyect.status %></td>
                    <td><% var empresa = proyect.company ? proyect.company.name : "ERROR: NO HAY DATO" %><%= empresa %></td>
                    <td><% var contacto = proyect.contact ? proyect.contact.name : "ERROR: NO HAY DATO" %><%= contacto %></td>
                    <td><a href="/proyects/<%= proyect._id %>/edit" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <form class="delete-form" action="/proyects/<%= proyect._id %>?_method=delete" method="POST">
                        <button onclick="return confirm('EstÃ¡ seguro de eliminar: <%= proyect.name %>?');" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form></td>
                </tr>
            <% }); %>
        </table>  
        
        <% include ../partials/pagination %>
        
    </div>
</div>

<% include ../partials/footer %>