<% include ../partials/header %>

<div class="container-fluid margen200">
    <% include ../partials/toolbar %>
    <div class="row">
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>Fecha</th>
                <th>Cuenta</th>
                <th>Monto</th>
                <th>Observaciones</th>
                <th></th>
            </tr>
            <% transactions.forEach(function(transaction){ %>
                <tr>
                    <% 
                        var d = numeral(transaction.date % 100).format('00');
                        var m = numeral((transaction.date % 10000 - d)/100).format('00');
                        var y = numeral((transaction.date - m*100 - d)/10000).format('00');
                        var fecha = d + "/" + m + "/" + y 
                    %>
                    <td><%= fecha %></td>
                    <td><% var nulo = transaction.account ? transaction.account.name : "ERROR: NO HAY DATO" %><%= nulo %></td>
                    <% var monto = Number((transaction.total * transaction.sign)/100).toFixed(2);  %>
                    <% monto = numeral(monto).format('0,0.00'); %>
                    <td class="rightThis"><%= monto %></td>
                    <% var observacion = transaction.obs ? transaction.obs.substring(transaction.obs.indexOf("|") + 1) : ""; %>
                    <td><%= observacion %></td>
                    <td><a href="/electronics/<%= transaction._id %>/edit" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <form class="delete-form" action="/electronics/<%= transaction._id %>?_method=delete" method="POST">
                        <button onclick="return confirm('EstÃ¡ seguro de eliminar: <%= fecha + " " + monto %>?');" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form></td>
                </tr>
            <% }); %>
        </table>  
        
        <% include ../partials/pagination %>
        
    </div>
</div>

<% include ../partials/footer %>