<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Nueva Transferencia</h3>  
            <br>
        </div>
        <form action="/electronics" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="dateFrom" class="col-sm-2 control-label">Fecha de Retiro de Fondos:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="dateFrom" type="date" name="dateFrom" onchange="document.getElementById('dateTo').value=this.value;">
                </div>
                <label for="dateTo" class="col-sm-2 control-label">Fecha de Ingreso de Fondos:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="dateTo" type="date" name="dateTo">
                </div>
            </div>
            <div class="form-group">
                <label for="accountFrom" class="col-sm-2 control-label">Cuenta:</label>
                <div class="col-sm-4">
                    <select id="accountFrom" class="form-control" name="accountFrom">
                        <% accounts.forEach(function(account){ %>
                            <option value="<%= account._id %>"><%= account.name %></option>
                        <% }); %>
                    </select>
                </div>
                <label for="accountTo" class="col-sm-2 control-label">Cuenta:</label>
                <div class="col-sm-4">
                    <select id="accountTo" class="form-control" name="accountTo">
                        <% accounts.forEach(function(account){ %>
                            <option value="<%= account._id %>"><%= account.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="total" class="col-sm-2 control-label">Monto:</label>
                <div class="col-sm-4" lang="en-US">
                    <input step="0.01" class="form-control" id="total" type="number" name="total" placeholder="monto">
                </div>
                <label for="obs" class="col-sm-2 control-label">Observación:</label>
                <div class="col-sm-4" lang="en-US">
                    <input class="form-control" id="obs" type="text" name="obs" placeholder="observación...">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar">
                    <input type="submit" name="otro" class="btn btn-success" value="Guardar y Añadir Otro"> 
                    <a href="/electronics/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>