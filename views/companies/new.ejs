<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Nueva Empresa</h3>  
            <br>
        </div>
        <form action="/companies" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="name" type="text" name="company[name]" placeholder="nombre">
                </div>
                <label for="nit" class="col-sm-2 control-label">NIT:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="nit" type="text" name="company[nit]" placeholder="nit">
                </div>
            </div>
            <div class="form-group">
                <label for="fullName" class="col-sm-2 control-label">Razón Social:</label>
                <div class="col-sm-10" id="phones">
                    <input class="form-control" type="text" name="company[fullName]" placeholder="razón social">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar">
                    <input type="submit" name="otro" class="btn btn-success" value="Guardar y Añadir Otra"> 
                    <a href="/companies/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>