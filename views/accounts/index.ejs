<% include ../partials/header %>

<div class="container-fluid margen100">
    <% include ../partials/toolbar %>
    <div class="row">
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Banco</th>
                <th>Número</th>
                <th>Trabajador</th>
                <th></th>
            </tr>
            <% accounts.forEach(function(account){ %>
                <tr>
                    <td><%= account.name %></td>
                    <td><%= account.type %></td>
                    <td><%= account.bank %></td>
                    <td><%= account.number %></td>
                    <td><% var nulo = account.contact ? account.contact.name : "ERROR: NO HAY DATO" %><%= nulo %></td>
                    <td><a href="/accounts/<%= account._id %>/edit" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <form class="delete-form" action="/accounts/<%= account._id %>?_method=delete" method="POST">
                        <button onclick="return confirm('Está seguro de eliminar: <%= account.name %>?');" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form></td>
                </tr>
            <% }); %>
        </table>  
        
        <% include ../partials/pagination %>
        
    </div>
</div>

<% include ../partials/footer %>