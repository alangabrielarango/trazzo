<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Editar Cuenta</h3>  
            <br>
        </div>
        <form action="/accounts/<%= account._id %>?_method=PUT" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="name" type="text" name="account[name]" value="<%= account.name %>">
                </div>
                <label for="number" class="col-sm-2 control-label">Número:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="number" type="text" name="account[number]" value="<%= account.number %>">
                </div>
            </div>
            <div class="form-group">
                <label for="type" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-4">
                    <select id="type" class="form-control" name="account[type]">
                        <% var seleccion = ""; var tipo = account.type%>
                        <% seleccion = "";%>
                        <option value="Monetaria" <%= seleccion = tipo === "Monetaria" ? "selected" : ""%>>Monetaria</option>
                        <option value="Ahorro" <%= seleccion = tipo === "Ahorro" ? "selected" : ""%>>Ahorro</option>
                        <option value="Efectivo" <%= seleccion = tipo === "Efectivo" ? "selected" : ""%>>Efectivo</option>
                        <option value="Tarjeta Crédito" <%= seleccion = tipo === "Tarjeta Crédito" ? "selected" : ""%>>Tarjeta Crédito</option>
                        <option value="Extrafinanciamiento" <%= seleccion = tipo === "Extrafinanciamiento" ? "selected" : ""%>>Extrafinanciamiento</option>
                        <option value="Préstamo" <%= seleccion = tipo === "Préstamo" ? "selected" : ""%>>Préstamo</option>
                        <option value="Dólares Monetaria" <%= seleccion = tipo === "Dólares Monetaria" ? "selected" : ""%>>Dólares Monetaria</option>
                        <option value="Dólares Ahorro" <%= seleccion = tipo === "Dólares Ahorro" ? "selected" : ""%>>Dólares Ahorro</option>
                    </select>
                </div>
                <label for="bank" class="col-sm-2 control-label">Banco:</label>
                <div class="col-sm-4">
                    <select id="bank" class="form-control" name="account[bank]">
                        <% var seleccion2 = ""; var banco = account.bank%>
                        <% seleccion2 = "";%>
                        <option value="Efectivo" <%= seleccion2 = banco === "Efectivo" ? "selected" : ""%>>Efectivo</option>
                        <option value="Banco Agromercantil" <%= seleccion2 = banco === "Banco Agromercantil" ? "selected" : ""%>>Banco Agromercantil</option>
                        <option value="Banrural" <%= seleccion2 = banco === "Banrural" ? "selected" : ""%>>Banrural</option>
                        <option value="Banco Industrial" <%= seleccion2 = banco === "Banco Industrial" ? "selected" : ""%>>Banco Industrial</option>
                        <option value="G&T Continental" <%= seleccion2 = banco === "G&T Continental" ? "selected" : ""%>>G&T Continental</option>
                        <option value="Crédito Hipotecario Nacional" <%= seleccion2 = banco === "Crédito Hipotecario Nacional" ? "selected" : ""%>>Crédito Hipotecario Nacional</option>
                        <option value="BAC Credomatic" <%= seleccion2 = banco === "BAC Credomatic" ? "selected" : ""%>>BAC Credomatic</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="contact" class="col-sm-2 control-label">Contacto:</label>
                <div class="col-sm-4">
                    <select id="contact" class="form-control" name="account[contact]">
                        <% var contacto = "", valor = "" %>
                        <% contacts.forEach(function(contact){ %>
                            <% valor = account.contact ? account.contact.name : "null" %>
                            <% contacto = contact.name === valor ? "selected" : ""; %>
                            <% contacto = contacto === "null" ? "selected" : contacto; %>
                            <option value="<%= contact._id %>" <%= contacto %>><%= contact.name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar Cambios">
                    <a href="/accounts/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>