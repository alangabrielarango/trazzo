<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Editar Categor√≠a</h3>  
            <br>
        </div>
        <form action="/categories/<%= category._id %>?_method=PUT" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="name" type="text" name="category[name]" value="<%= category.name %>">
                </div>
                <label for="tipo" class="col-sm-2 control-label">Tipo:</label>
                <div class="col-sm-4">
                    <select id="tipo" class="form-control" name="category[sign]">
                        <% var ingreso; category.sign>0 ? ingreso = "selected" : ingreso = ""; %>
                        <% var gasto; category.sign<0 ? gasto = "selected" : gasto = ""; %>
                        <option value="-1" <%= gasto %>>Gasto</option>
                        <option value="1" <%= ingreso %>>Ingreso</option>
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar Cambios">
                    <a href="/categories/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>