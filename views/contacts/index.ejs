<% include ../partials/header %>

<div class="container-fluid margen40">
    <% include ../partials/toolbar %>
    <div class="row">
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>Nombre</th>
                <th>NIT</th>
                <th>Teléfonos</th>
                <th>Email</th>
                <th class="hideThis">Sitio Web</th>
                <th>Tags</th>
                <th class="hideThis">Tiene Cuenta</th>
                <th class="hideThis">Es Cliente</th>
                <th class="hideThis">Es Proveedor</th>
                <th class="hideThis">Es Trabajador</th>
                <th></th>
                <th></th>
            </tr>
            <% contacts.forEach(function(contact){ %>
                <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.nit %></td>
                    <td><%= contact.phone1 %><br><%= contact.phone2 %><br><%= contact.phone3 %></td>
                    <td><%= contact.email %></td>
                    <td class="hideThis"><%= contact.webPage %></td>
                    <td><%= contact.tags %></td>
                    <td class="hideThis"><% if(contact.hasAccount){ %><i class="fa fa-check" aria-hidden="true"></i><% } %></td>
                    <td class="hideThis"><% if(contact.isClient){ %><i class="fa fa-check" aria-hidden="true"></i><% } %></td>
                    <td class="hideThis"><% if(contact.isProvider){ %><i class="fa fa-check" aria-hidden="true"></i><% } %></td>
                    <td class="hideThis"><% if(contact.isWorker){ %><i class="fa fa-check" aria-hidden="true"></i><% } %></td>
                    <td><a href="/contacts/<%= contact._id %>/edit" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <form class="delete-form" action="/contacts/<%= contact._id %>?_method=delete" method="POST">
                        <button onclick="return confirm('Está seguro de eliminar: <%= contact.name %>?');" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form></td>
                </tr>
            <% }); %>
        </table>  
        
        <% include ../partials/pagination %>
        
    </div>
</div>

<% include ../partials/footer %>