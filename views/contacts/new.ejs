<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <h3>Nuevo Contacto</h3>  
            <br>
        </div>
        <form action="/contacts" method="POST" class="form-horizontal">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                    <input class="form-control" id="name" type="text" name="contact[name]" placeholder="nombre">
                </div>
            </div>
            <div class="form-group">
                <label for="nit" class="col-sm-2 control-label">NIT:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="nit" type="text" name="contact[nit]" placeholder="nit">
                </div>
                <label for="fullName" class="col-sm-2 control-label">Razón Social:</label>
                <div class="col-sm-4">
                    <input class="form-control" id="fullName" type="text" name="contact[fullName]" placeholder="Razón Social">
                </div>
            </div>
            <div class="form-group">
                <label for="phones" class="col-sm-2 control-label">Teléfonos:</label>
                <div class="col-sm-4" id="phones">
                    <input class="form-control" type="text" name="contact[phone1]" placeholder="teléfono">
                </div>
                <div class="col-sm-3" id="phones">
                    <input class="form-control" type="text" name="contact[phone2]" placeholder="teléfono">
                </div>
                <div class="col-sm-3" id="phones">
                    <input class="form-control" type="text" name="contact[phone3]" placeholder="teléfono">
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email y Sitio Web:</label>
                <div class="col-sm-5">
                    <input class="form-control" id="email" type="text" name="contact[email]" placeholder="email"> 
                </div>
                <div class="col-sm-5">
                    <input class="form-control" type="text" name="contact[webPage]" placeholder="sitio web"> 
                </div>
            </div>
            <div class="form-group">
                <label for="tags" class="col-sm-2 control-label">Etiquetas:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="tags" name="contact[tags]" placeholder="separe con comas: electricidad, dibujo, arquitectura"></textarea>
                </div>
            </div>
            <div class="form-group checkbox">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                    <input  type="checkbox" name="contact[hasAccount]"> Lleva una cuenta?
                </div>
                <div class="col-sm-2">
                    <input  type="checkbox" name="contact[isClient]"> Es un cliente?
                </div>
                <div class="col-sm-2">
                    <input  type="checkbox" name="contact[isProvider]"> Provee productos?
                </div>
                <div class="col-sm-4">
                    <input  type="checkbox" name="contact[isWorker]"> Provee servicios o es un trabajador?
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 text-right">
                    <input type="submit" name="guardar" class="btn btn-success" value="Guardar">
                    <input type="submit" name="otro" class="btn btn-success" value="Guardar y Añadir Otro"> 
                    <a href="/contacts/p=1/s=." class="btn btn-warning">Cancelar</a> 
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>